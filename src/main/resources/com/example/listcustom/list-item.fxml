<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox fx:controller="com.example.listcustom.ItemController" alignment="CENTER" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fitHeight="67.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../account_icon.png" />
         </image>
      </ImageView>
      <VBox alignment="CENTER_LEFT">
         <children>
            <Label fx:id="name" text="NOM PRENOM" />
            <Label fx:id="mail" text="Adresse mail" />
         </children>
      </VBox>
      <VBox alignment="CENTER_RIGHT">
         <children>
            <Button mnemonicParsing="false" text="Modifier" />
            <Button mnemonicParsing="false" text="Supprimer" />
         </children>
      </VBox>
   </children>
</HBox>
